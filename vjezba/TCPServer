using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Net.Sockets;
using System.Text;
using System.Threading.Tasks;
using System.Threading;
using System.Windows.Forms;
using System.Net;

namespace vjezbaprvistudio
{
    public partial class Form1 : Form
    {
        TcpListener listener;
        Thread serverThread;
        bool PokrenutServer = false;
        public Form1()
        {
            InitializeComponent();
        }

        private void bt_start_Click(object sender, EventArgs e)
        {
            if(!PokrenutServer)
            {
                serverThread = new Thread(StartServer);
                serverThread.IsBackground = true;
                serverThread.Start();
                PokrenutServer=true;

                bt_start.Enabled = false;
            }
        }
        private void StartServer()
        {
            try
            {
                listener = new TcpListener(IPAddress.Parse("127.0.0.1"), 11000);
                listener.Start();
                Invoke(new Action(() => lB_server_poruke.Items.Add("startani server")));
                    while(true) 
                    {
                    TcpClient client = listener.AcceptTcpClient();
                    NetworkStream stream = client.GetStream();
                    byte[] buffer = new byte[1024];
                    int bytesRead = stream.Read(buffer, 0, buffer.Length);
                    string message = Encoding.UTF8.GetString(buffer);
                    Invoke(new Action(() => lB_server_poruke.Items.Add("poruka: " + message)));
                    byte[] response = Encoding.UTF8.GetBytes("dobivena poruka");
                    stream.Write(response,0,response.Length);

                    client.Close();
                }
            }
            catch (Exception ex)
            {
                Invoke(new Action(() => lB_server_poruke.Items.Add("gre≈°ka")));
            }
        }
    }
}
